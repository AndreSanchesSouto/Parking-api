generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id        String @id @default(uuid())
  name      String @db.VarChar(50)
  year_born String @db.Char(4)
  password  String
  cellphone String @db.Char(11) 

  @@map("driver")
}

model Car {
  plate String @id @db.VarChar(7)
  name String @db.VarChar(50)
  year String? @db.Char(4)
  mercosul Boolean

  @@map("car")
}